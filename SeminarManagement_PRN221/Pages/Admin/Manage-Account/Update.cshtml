@page
@model SeminarManagement_PRN221.Pages.Admin.Manage_Account.UpdateModel
@{
Layout = "_AdminLayout";
}

<section class="bg-dark vh-100">
    <div class="container text-white text-center pt-4">
        <h2 class="text-center mb-5 text-maingreeen">Update User</h2>

        @if (!string.IsNullOrEmpty(Model.ErrorMessage))
        {
        <div class='alert alert-danger alert-dismissible fade show' role='alert'>
            <strong>@Model.ErrorMessage</strong>
            <button type='button' class='btn-close' data-bs-dismiss='alert' aria-label='Close'></button>
        </div>
        }
        else if (!string.IsNullOrEmpty(Model.SuccessMessage))
        {
        <div class='alert alert-success alert-dismissible fade show' role='alert'>
            <strong>@Model.SuccessMessage</strong>
            <button type='button' class='btn-close' data-bs-dismiss='alert' aria-label='Close'></button>
        </div>
        }

        <div class="row justify-content-center">
            <div class="col-md-6 mx-auto rounded border p-4 bg-light shadow-sm">
                <form method="post">
                    <div asp-validation-summary="All" class="text-danger mb-3"></div>

                    <div class="row mb-3">
                        <label class="col-sm-4 col-form-label text-dark">ID</label>
                        <div class="col-sm-8">
                            <input readonly class="form-control-plaintext" value="@Model.User.UserId">
                        </div>
                    </div>

                    <div class="row mb-3">
                        <label class="col-sm-4 col-form-label text-dark">First Name</label>
                        <div class="col-sm-8">
                            <input class="form-control" asp-for="UserDto.FirstName">
                            <span asp-validation-for="UserDto.FirstName" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="row mb-3">
                        <label class="col-sm-4 col-form-label text-dark">Last Name</label>
                        <div class="col-sm-8">
                            <input class="form-control" asp-for="UserDto.LastName">
                            <span asp-validation-for="UserDto.LastName" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="row mb-3">
                        <label class="col-sm-4 col-form-label text-dark">Email</label>
                        <div class="col-sm-8">
                            <input class="form-control" asp-for="UserDto.Email">
                            <span asp-validation-for="UserDto.Email" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="row mb-3">
                        <label class="col-sm-4 col-form-label text-dark">Phone Number</label>
                        <div class="col-sm-8">
                            <input class="form-control" asp-for="UserDto.PhoneNumber">
                            <span asp-validation-for="UserDto.PhoneNumber" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="row mb-3">
                        <label class="col-sm-4 col-form-label text-dark">Username</label>
                        <div class="col-sm-8">
                            <input class="form-control" asp-for="UserDto.Username">
                            <span asp-validation-for="UserDto.Username" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="row mb-3">
                        <label class="col-sm-4 col-form-label text-dark">Password</label>
                        <div class="col-sm-8">
                            <input class="form-control" asp-for="UserDto.Password">
                            <span asp-validation-for="UserDto.Password" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="row mb-3">
                        <label class="col-sm-4 col-form-label text-dark">Role</label>
                        <div class="col-sm-8">
                            <select class="form-select" asp-for="UserDto.RoleId" id="roleSelect">
                                <option value="">Select Role</option>
                                @foreach (var role in Model.Roles)
                                {
                                <option value="@role.RoleId">@role.RoleName</option>
                                }
                            </select>
                            <span asp-validation-for="UserDto.RoleId" class="text-danger"></span>
                        </div>
                    </div>

                    <div id="sponsorDetails" style="display: none;">
                        <div class="row mb-3">
                            <label class="col-sm-4 col-form-label text-dark">Sponsor Name</label>
                            <div class="col-sm-8">
                                <input class="form-control" asp-for="UserDto.SponsorName">
                                <span asp-validation-for="UserDto.SponsorName" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="row mb-3">
                            <label class="col-sm-4 col-form-label text-dark">Sponsor Type</label>
                            <div class="col-sm-8">
                                <input class="form-control" asp-for="UserDto.SponsorType">
                                <span asp-validation-for="UserDto.SponsorType" class="text-danger"></span>
                            </div>
                        </div>
                    </div>

                    <div class="row mb-3">
                        <div class="offset-sm-4 col-sm-4 d-grid">
                            <button type="submit" class="btn btn-button"><i class="fas fa-check"></i> Submit</button>
                        </div>
                        <div class="col-sm-4 d-grid">
                            <a class="btn btn-outline-primary" href="/Admin/Manage-Account/Manage" role="button"><i class="fas fa-times"></i> Cancel</a>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</section>

@section Scripts {
<script>
    document.getElementById("roleSelect").addEventListener("change", function () {
        var sponsorDetails = document.getElementById("sponsorDetails");
        if (this.value === "@Model.SponsorRoleId.ToString()") {
            sponsorDetails.style.display = "block";
        } else {
            sponsorDetails.style.display = "none";
        }
    });

    // Trigger change event on page load to handle role display
    document.getElementById("roleSelect").dispatchEvent(new Event("change"));
</script>
}

<style>
    .bg-dark {
        background-color: #343a40 !important;
    }

    .border {
        border: 1px solid #dee2e6 !important;
    }

    .shadow-sm {
        box-shadow: 0 .125rem .25rem rgba(0, 0, 0, .075) !important;
    }

    .text-maingreeen {
        color: #28a745 !important;
    }

    .btn-button {
        background-color: #28a745;
        color: white;
    }

    .btn-button:hover {
        background-color: #218838;
        color: white;
    }

    .text-dark {
        color: #343a40 !important;
    }
</style>
