@page
@model SeminarManagement_PRN221.Pages.Admin.Manage_Account.UpdateModel
@{
    Layout = "_AdminLayout";
}

<h2 class="text-center mb-5">Update User</h2>

@if (!string.IsNullOrEmpty(Model.ErrorMessage))
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <strong>@Model.ErrorMessage</strong>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}
else if (!string.IsNullOrEmpty(Model.SuccessMessage))
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        <strong>@Model.SuccessMessage</strong>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<div class="row">
    <div class="col-md-8 mx-auto rounded border p-3">
        <form method="post">
            <div asp-validation-summary="All" class="text-danger mb-3"></div>

            <div class="row mb-3">
                <label class="col-sm-4 col-form-label">ID</label>
                <div class="col-sm-8">
                    <input readonly class="form-control-plaintext" value="@Model.User.UserId">
                </div>
            </div>

            <div class="row mb-3">
                <label class="col-sm-4 col-form-label">First Name</label>
                <div class="col-sm-8">
                    <input class="form-control" asp-for="UserDto.FirstName">
                    <span asp-validation-for="UserDto.FirstName" class="text-danger"></span>
                </div>
            </div>

            <div class="row mb-3">
                <label class="col-sm-4 col-form-label">Last Name</label>
                <div class="col-sm-8">
                    <input class="form-control" asp-for="UserDto.LastName">
                    <span asp-validation-for="UserDto.LastName" class="text-danger"></span>
                </div>
            </div>

            <div class="row mb-3">
                <label class="col-sm-4 col-form-label">Email</label>
                <div class="col-sm-8">
                    <input class="form-control" asp-for="UserDto.Email">
                    <span asp-validation-for="UserDto.Email" class="text-danger"></span>
                </div>
            </div>

            <div class="row mb-3">
                <label class="col-sm-4 col-form-label">Phone Number</label>
                <div class="col-sm-8">
                    <input class="form-control" asp-for="UserDto.PhoneNumber">
                    <span asp-validation-for="UserDto.PhoneNumber" class="text-danger"></span>
                </div>
            </div>

            <div class="row mb-3">
                <label class="col-sm-4 col-form-label">Username</label>
                <div class="col-sm-8">
                    <input class="form-control" asp-for="UserDto.Username">
                    <span asp-validation-for="UserDto.Username" class="text-danger"></span>
                </div>
            </div>

            <div class="row mb-3">
                <label class="col-sm-4 col-form-label">Password</label>
                <div class="col-sm-8">
                    <input class="form-control" asp-for="UserDto.Password">
                    <span asp-validation-for="UserDto.Password" class="text-danger"></span>
                </div>
            </div>

            <div class="row mb-3">
                <label class="col-sm-4 col-form-label">Role</label>
                <div class="col-sm-8">
                    <select class="form-select" asp-for="UserDto.RoleId" id="roleSelect">
                        <option value="">Select Role</option>
                        @foreach (var role in Model.Roles)
                        {
                            <option value="@role.RoleId">@role.RoleName</option>
                        }
                    </select>
                    <span asp-validation-for="UserDto.RoleId" class="text-danger"></span>
                </div>
            </div>

            <div id="sponsorDetails" style="display: none;">
                <div class="row mb-3">
                    <label class="col-sm-4 col-form-label">Sponsor Name</label>
                    <div class="col-sm-8">
                        <input class="form-control" asp-for="UserDto.SponsorName">
                        <span asp-validation-for="UserDto.SponsorName" class="text-danger"></span>
                    </div>
                </div>

                <div class="row mb-3">
                    <label class="col-sm-4 col-form-label">Sponsor Type</label>
                    <div class="col-sm-8">
                        <input class="form-control" asp-for="UserDto.SponsorType">
                        <span asp-validation-for="UserDto.SponsorType" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <div class="row mb-3">
                <label class="col-sm-4 col-form-label">QrCode</label>
                <div class="col-sm-8">
                    <input class="form-control" asp-for="UserDto.QrCode">
                    <span asp-validation-for="UserDto.QrCode" class="text-danger"></span>
                </div>
            </div>

            <div class="row mb-3">
                <div class="offset-sm-4 col-sm-4 d-grid">
                    <button type="submit" class="btn btn-primary">Submit</button>
                </div>
                <div class="col-sm-4 d-grid">
                    <a class="btn btn-outline-primary" href="/Admin/Manage-Account/Manage" role="button">Cancel</a>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <script>
        document.getElementById("roleSelect").addEventListener("change", function () {
            var sponsorDetails = document.getElementById("sponsorDetails");
            if (this.value === "@Model.SponsorRoleId.ToString()") {
                sponsorDetails.style.display = "block";
            } else {
                sponsorDetails.style.display = "none";
            }
        });

        // Trigger change event on page load to handle role display
        document.getElementById("roleSelect").dispatchEvent(new Event("change"));
    </script>
}
