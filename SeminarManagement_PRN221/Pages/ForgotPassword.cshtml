@page
@model SeminarManagement_PRN221.Pages.ForgotPasswordModel
@{
}
<div class="container">
    <div class="row justify-content-center mt-5">
        <div class="col-md-6">
            <form method="post">
                <div class="form-group">
                    <label>Email:</label>
                    <input asp-for="Email" asp-route-email="@Model.Email" class="form-control" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="form-group text-right">
                    <button type="submit" class="btn btn-primary">Verify</button>
                </div>
            </form>
        </div>
    </div>
</div>

