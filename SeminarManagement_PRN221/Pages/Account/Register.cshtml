@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}

<section class="vh-100 bg-backgroundimage d-flex justify-content-center align-items-center">
    <div class="container bg-dark px-4 pt-2 rounded" style="max-width: 30rem;">
        <div class="row">
            <div class="col text-white">
                <div class="d-flex flex-column align-items-center h-custom-2 px-4 mt-2 pt-2">
                    <form method="post" style="width: 100%;">
                        <h3 class="fw-bold mb-3 pb-1 text-maingreeen text-center" style="letter-spacing: 1px;">Register</h3>

                        <div class="form-group mb-2">
                            <label class="form-label text-white fw-bold" for="form2Example18">First Name</label>
                            <input asp-for="User.FirstName" type="text" id="form2Example18" class="form-control form-control-sm" />
                            <span asp-validation-for="User.FirstName" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-2">
                            <label class="form-label text-white fw-bold" for="form2Example28">Last Name</label>
                            <input asp-for="User.LastName" type="text" id="form2Example28" class="form-control form-control-sm" />
                            <span asp-validation-for="User.LastName" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-2">
                            <label class="form-label text-white fw-bold" for="form2Example28">Email</label>
                            <input asp-for="User.Email" type="email" id="form2Example28" class="form-control form-control-sm" />
                            <span asp-validation-for="User.Email" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-2">
                            <label class="form-label text-white fw-bold" for="form2Example28">Password</label>
                            <input asp-for="User.Password" type="password" id="form2Example28" class="form-control form-control-sm" />
                            <span asp-validation-for="User.Password" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-2">
                            <label class="form-label text-white fw-bold" for="form2Example28">Confirm Password</label>
                            <input asp-for="ConfirmPassword" type="password" id="form2Example28" class="form-control form-control-sm" />
                            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                        </div>

                        <div class="mt-5 mb-3">
                            <button type="submit" class="btn btn-button w-100">Register</button>
                        </div>

                        <p class="small mb-2">
                            <a class="text-maingreeen" href="/Account/Login">Already have an account? Log in</a>
                        </p>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
