@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}

<section class="vh-100">
    <div class="container-fluid">
        <div class="row">
            <div class="col-sm-6 text-black">

                <div class="d-flex align-items-center h-custom-2 px-2 ms-xl-4 mt-2 pt-1 pt-xl-0 mt-xl-n5">

                    <form method="post" style="width: 23rem;">
                        <h3 class="fw-normal mb-3 pb-3" style="letter-spacing: 1px;">Register</h3>
                        
                        <div class="d-flex justify-content-between align-items-between gap-2">
                            <div data-mdb-input-init class="form-outline mb-2">
                                <input asp-for="User.FirstName" type="text" id="form2Example18" class="form-control form-control-lg" />
                                <label class="form-label" for="form2Example18">First Name</label>
                                <span asp-validation-for="User.FirstName" class="text-danger"></span>
                            </div>

                            <div data-mdb-input-init class="form-outline mb-2">
                                <input asp-for="User.LastName" type="text" id="form2Example28" class="form-control form-control-lg" />
                                <label class="form-label" for="form2Example28">Last Name</label>
                                <span asp-validation-for="User.LastName" class="text-danger"></span>
                            </div>
                        </div>
                        

                        <div data-mdb-input-init class="form-outline mb-2">
                            <input asp-for="User.Email" type="email" id="form2Example28" class="form-control form-control-lg" />
                            <label class="form-label" for="form2Example28">Email</label>
                            <span asp-validation-for="User.Email" class="text-danger"></span>
                        </div>

                        <div data-mdb-input-init class="form-outline mb-2">
                            <input asp-for="User.Password" type="password" id="form2Example28" class="form-control form-control-lg" />
                            <label class="form-label" for="form2Example28">Password</label>
                            <span asp-validation-for="User.Password" class="text-danger"></span>
                        </div>

                        <div data-mdb-input-init class="form-outline mb-2">
                            <input asp-for="ConfirmPassword" type="password" id="form2Example28" class="form-control form-control-lg" />
                            <label class="form-label" for="form2Example28">Confirm Password</label>
                            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                        </div>

                        <div class="pt-1 mb-2">
                            <button type="submit" class="btn btn-info btn-lg btn-block">Register</button>
                        </div>

                        <p class="small mb-2 pb-lg-2"><a class="text-muted" href="/Account/Login">Already have an account? Log in</a></p>
                    </form>

                </div>

            </div>
            <div class="col-sm-6 px-0 d-none d-sm-block">
                <img src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-login-form/img3.webp"
                     alt="Register image" class="w-100 vh-100" style="object-fit: cover; object-position: left;">
            </div>
        </div>
    </div>
</section>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
