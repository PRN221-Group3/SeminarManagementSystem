@page
@model LoginModel
@{
    ViewData["Title"] = "Login";
}

<link rel="stylesheet" href="~/css/login.css"/>

<section class="vh-100 bg-backgroundimage d-flex justify-content-center align-items-center">
    <div class="container bg-dark p-4 rounded" style="max-width: 30rem;">
        <div class="row">
            <div class="col text-white">
                <div class="d-flex flex-column align-items-center h-custom-2 px-4 mt-2 pt-2">
                    <form method="post" style="width: 100%;">
                        <h3 class="fw-bold mb-3 pb-1 text-maingreeen text-center" style="letter-spacing: 1px;">Log in</h3>

                        @if (!ViewData.ModelState.IsValid)
                        {
                            <div class="alert alert-danger">
                                @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                                {
                                    <p>@error.ErrorMessage</p>
                                }
                            </div>
                        }

                        <div class="form-group mb-2">
                            <label class="form-label text-white fw-bold" for="form2Example18">User name or email</label>
                            <input asp-for="Input.Username" type="text" id="form2Example18" class="form-control form-control-lg" />
                            <span asp-validation-for="Input.Username" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-2">
                            <label class="form-label text-white fw-bold" for="form2Example28">Password</label>
                            <input asp-for="Input.Password" type="password" id="form2Example28" class="form-control form-control-lg" />
                            <span asp-validation-for="Input.Password" class="text-danger"></span>
                        </div>

                        <div class="pt-1 mb-3">
                            <button type="submit" class="btn btn-button w-100 fw-bold fs-5">Log in</button>
                        </div>

                        <p class="small mb-2">
                            <a class="text-maingreeen" asp-page="/ForgotPassword">Forgot password?</a>
                        </p>
                        <p class="mb-1">Don't have an account? <a asp-page="/Account/Register" class="text-maingreeen fw-bold text-decoration-none">Register here</a></p>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>



@section Scripts {
    <partial name="_ValidationScriptsPartial"/>
}