<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <meta name="description" content="" />
    <meta name="author" content="" />
    <title>@ViewData["Title"] - Seminar Organization</title>
    <!-- Favicon-->
    <link rel="icon" type="image/x-icon" href="~/assets/favicon.ico" />
    <!-- Bootstrap icons-->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.5.0/font/bootstrap-icons.css" rel="stylesheet" type="text/css" />
    <!-- Google fonts-->
    <link href="https://fonts.googleapis.com/css?family=Lato:300,400,700,300italic,400italic,700italic" rel="stylesheet" type="text/css" />
    <!-- Core theme CSS (includes Bootstrap)-->
    <link href="/css/site.css" rel="stylesheet" />
    <!-- Include jQuery before other scripts -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.3/jquery.validate.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate-unobtrusive/3.2.11/jquery.validate.unobtrusive.min.js"></script>
    <!-- Sponsorship modal-->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-KyZXEAg3QhqLMpG8r+Knujsl7/1hb8J2G5VO+9k5Cl5G8m5eZd4fEMc77tM/Zsl2" crossorigin="anonymous">
</head>
<body>
    <!-- Navigation-->
    <nav class="navbar navbar-light bg-light static-top">
        <div class="container">
            <a class="navbar-brand" asp-area="" asp-page="/Index">Seminar Organization</a>
            <div class="d-flex align-items-center">
                @if (User.Identity.IsAuthenticated)
                {
                    @if (User.IsInRole("Operator"))
                    {
                        <div class="nav-item dropdown">
                            <button class="btn btn-secondary dropdown-toggle" type="button" data-bs-toggle="dropdown" aria-expanded="false">
                                Admin
                            </button>
                            <ul class="dropdown-menu">
                                <li><a class="dropdown-item" asp-area="" asp-page="/Admin/Manage-Account/Manage">Manage Account</a></li>
                                <li><a class="dropdown-item" asp-area="" asp-page="/Admin/Manage-Event/Manage">Manage Event</a></li>
                                <li><hr class="dropdown-divider"></li>
                                <li><a class="dropdown-item" asp-area="" asp-page="/Index">Home</a></li>
                            </ul>
                        </div>
                    }
                    else if (User.IsInRole("CheckingStaff"))
                    {
                        <a class="nav-link text-dark" asp-page="/CheckingStaffWorkspace/Index">Checking Staff</a>
                    }
                    else if (User.IsInRole("Sponsor"))
                    {
                        <a class="nav-link text-dark" asp-page="/UserRole/InvitationForSponsor">Sponsor</a>
                    }
                    <a class="btn btn-primary ms-3" asp-area="Identity" asp-page="/Account/Manage/Index">Hello, @User.Identity.Name!</a>
                    <a class="btn btn-primary ms-3" asp-page="/Account/Wallet" asp-route-username="@User.Identity.Name">Wallet</a>
                    <a class="btn btn-primary ms-3" asp-page="/Account/UpdateProfile">Update Profile</a>
                    <form asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="/" method="post" class="d-inline ms-2">
                        <button type="submit" class="btn btn-secondary">Logout</button>
                    </form>
                }
                else
                {
                    <a class="btn btn-primary ms-3" asp-area="Identity" asp-page="/Account/Login">Login</a>
                    <a class="btn btn-secondary ms-2" asp-area="Identity" asp-page="/Account/Register">Sign Up</a>
                }
            </div>
        </div>
    </nav>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <!-- Footer-->
    <footer class="footer bg-light">
        <div class="container">
            <div class="row">
                <div class="col-lg-6 h-100 text-center text-lg-start my-auto">
                    <ul class="list-inline mb-2">
                        <li class="list-inline-item"><a href="#!">About</a></li>
                        <li class="list-inline-item">⋅</li>
                        <li class="list-inline-item"><a href="#!">Contact</a></li>
                        <li class="list-inline-item">⋅</li>
                        <li class="list-inline-item"><a href="#!">Terms of Use</a></li>
                        <li class="list-inline-item">⋅</li>
                        <li class="list-inline-item"><a href="#!">Privacy Policy</a></li>
                    </ul>
                    <p class="text-muted small mb-4 mb-lg-0">&copy; Seminar Organization 2024. All Rights Reserved.</p>
                </div>
                <div class="col-lg-6 h-100 text-center text-lg-end my-auto">
                    <ul class="list-inline mb-0">
                        <li class="list-inline-item me-4">
                            <a href="#!"><i class="bi-facebook fs-3"></i></a>
                        </li>
                        <li class="list-inline-item me-4">
                            <a href="#!"><i class="bi-twitter fs-3"></i></a>
                        </li>
                        <li class="list-inline-item">
                            <a href="#!"><i class="bi-instagram fs-3"></i></a>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </footer>

    <!-- Bootstrap core JS-->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-o+FNb+AMO3ay5t4LWHSy4zLD4Ff6kzN0g3b/PtEX/A1zEZOzXl90QpqfH/tZtLhz" crossorigin="anonymous"></script>
    <!-- Core theme JS-->
    <script src="~/js/scripts.js"></script>
    <!-- SB Forms JS-->
    <!-- <script src="https://cdn.startbootstrap.com/sb-forms-latest.js"></script> -->
    @RenderSection("Scripts", required: false)
</body>
</html>
