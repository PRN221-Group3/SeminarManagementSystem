@page
@model ErrorModel
@{
    ViewData["Title"] = "Error";
}

<section class="bg-dark vh-100 pt-5">
    <h1 class="text-danger text-center">Error.</h1>
    <h2 class="text-danger text-center">Something wrong with your request, please try again</h2>
    <h5 class="text-white text-center">
        Please contact the Admin, this is our mistake.
    </h5>
    @if (Model.ShowRequestId)
    {
        <p class="text-center">
            <strong>Request ID:</strong> <code>@Model.RequestId</code>
        </p>
    }
</section>

